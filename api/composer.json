{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.9",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Api\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always tests"
    }
}
