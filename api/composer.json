{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "doctrine/orm": "^2.11",
        "php-di/php-di": "^6.3",
        "psr/cache": "^3.0",
        "ramsey/uuid": "^4.2",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.9",
        "symfony/cache": "^6.0",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Api\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always"
    }
}
